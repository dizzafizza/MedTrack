rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - allow access for both authenticated and fallback users
    match /users/{userId} {
      // Allow if user is authenticated and matches, OR if no auth (fallback mode)
      allow read, write: if (request.auth != null && request.auth.uid == userId) || 
                            (request.auth == null);
      
      // User reminders subcollection
      match /reminders/{reminderId} {
        allow read, write: if (request.auth != null && request.auth.uid == userId) || 
                             (request.auth == null);
      }
      
      // User medications subcollection
      match /medications/{medicationId} {
        allow read, write: if (request.auth != null && request.auth.uid == userId) || 
                             (request.auth == null);
      }
      
      // User FCM tokens subcollection
      match /fcmTokens/{tokenId} {
        allow read, write: if (request.auth != null && request.auth.uid == userId) || 
                             (request.auth == null);
      }
    }
    
    // Scheduled notifications collection (backend-managed)
    match /scheduledNotifications/{notificationId} {
      // Only Cloud Functions can manage scheduled notifications
      allow read, write: if false;
    }
  }
}
